<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  <div class="field">
    <%= f.label :watched_on %><br />
    <%= f.date_select :watched_on %>
  </div>
  <div class="field">
    <%= f.label :theater %><br />
    <%= f.text_field :theater %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <%= f.submit %>
<% end %>